---
const {id} = Astro.props;
---

<div class="frame" id={id}>
  <slot />
</div>

<style>
  .frame {
    scroll-snap-align: start;
    min-width: var(--frame-width);
    min-height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    transform: translateZ(0)
  }
</style>